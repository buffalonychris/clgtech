{
  "display": {
    "family": "Bebas Neue",
    "fallback": "Arial Black, system-ui, sans-serif"
  },
  "body": {
    "family": "Roboto",
    "fallback": "-apple-system, BlinkMacSystemFont, Segoe UI, system-ui, sans-serif"
  },
  "scale": {
    "h1": "clamp(2rem, 2.5vw + 1rem, 3.25rem)",
    "h2": "clamp(1.5rem, 1.8vw + 0.8rem, 2.25rem)",
    "h3": "clamp(1.25rem, 1.2vw + 0.6rem, 1.6rem)",
    "body": "1rem",
    "lead": "1.125rem"
  }
}